<section class="plantDetailsContainer">
	<div id="postContainer">
		<div>
			<h2 id="postTilte">Post</h2>
		</div>
		<div></div>
		<a class="AddPost" href="/post">Ajouter un post</a>
	</div>
	<article class="articleContainer">
		<img src="{{data.default_image.medium_url}}" alt="plant_id_picture">
		<p>{{data.description}}</p>
	</article>
	<aside class="aside">
		<p id="sideBarTitle">Mr Green
			<br>Thumb</p>

		{% if session.user %}
			<p>Bienvenue
				{{session.user.userName}}</p>
			<div class="sideButtonContainer">
				<a href="/logout">Déconnexion</a>
				<a href="">Mes plantes</a>
				<a href="/plants">Notre Jardin</a>
				<div class="checkButtoncontainer">
					<a class="getButton" href="/addPlantToCollection/{{plant.id}}">Ajouter à ma collection</a>
					<a class="getButton" href="/addPlantToRoom/{{plant.id}}">Ajouter à une pièce</a>
				</div>
			</div>
            <div class="itemsContainer"><img class="items" src="/images/sun.png" alt="sunlight">{{data.sunlight}}
			</div>
			<div class="itemsContainer"><img class="items" src="/images/drop.png" alt="watering">{{data.watering}}
			</div>

		{% else %}
			<a class="disconnectedButton" href="/home">Accueil</a>
			<a class="disconnectedButton" href="/plants">Notre Jardin</a>
			<div class="itemsContainer"><img class="items" src="/images/sun.png" alt="sunlight">{{data.sunlight}}
			</div>
			<div class="itemsContainer"><img class="items" src="/images/drop.png" alt="watering">{{data.watering}}
			</div>

		{% endif %}

	</aside>
</section>
